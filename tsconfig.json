{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es2015",
      "dom"
    ],
    "downlevelIteration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./test"
  ]
}
